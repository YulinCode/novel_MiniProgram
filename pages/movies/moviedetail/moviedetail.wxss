/* pages/movies/moviedetail/moviedetail.wxss */
page {
	overflow: auto;
	overflow-x: hidden;
}

.moviedetail {
	width: 100%;
}

.moviedetail .moviedetail__des {
	display: flex;
	flex-direction: column;
}

video {
	position: sticky;
	z-index: 99;
	top: 0;
}

videode {
	z-index: -1;
}

.moviedetail .moviedetail__des .moviedetail__title {
	margin: 20rpx 0;
	font-size: 36rpx;
	padding: 0 20rpx;
}

.moviedetail .moviedetail__des .moviedetail__des__description {
	margin: 20rpx 0;
	font-size: 32rpx;
	line-height: 1.5;
	color: #666;
	padding-left: 20rpx;
}

.moviedetail .moviedetail__des .moviedetail__des__tags {
	margin: 20rpx 0;
	display: flex;
	flex-wrap: wrap;
	color: #666;
	padding-left: 20rpx;
}

.moviedetail .moviedetail__des .moviedetail__des__tags .moviedetail__des__tags__item {
	margin: 10rpx;
	border-radius: 20px;
	border: 1px solid #9999992e;
	padding: 6rpx 20rpx;
}

.likebutton {
	display: flex;
	justify-content: space-around;
	margin: 20rpx 30rpx;
}

.likebutton view {
	color: #bfbfbf;
	display: flex;
	align-items: center;
}

.likebutton view:nth-child(2),
.likebutton view:nth-child(3) {
	color: #e6e6e6;
}

.likebutton view image {
	width: 80rpx;
	height: 80rpx;
	margin-right: 20rpx;
}

.hotvideo {
	text-align: center;
	font-size: 40rpx;
	padding: 40rpx;
	border-top: 2px solid #888;
	margin: 0;
}