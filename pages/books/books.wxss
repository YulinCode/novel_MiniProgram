.fictionType {
  font-size: 36rpx;
  height: 36rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.fictionType::before {
  content: '';
  width: 2px;
  height: 36rpx;
  background-color: red;
  margin-right: 10rpx;
  position: relative;
  top: 2px;
}

.channel {
  margin-top: 20px;
  border-radius: 9px;
  padding: 20px 5px;
  position: relative;
}

.channel .clip {
  position: absolute;
  top: -10px;
  left: 10rpx;
  font-size: 50px;
  font-family: Helvetica;
  font-weight: bold;
  background-size: cover;
  color: transparent;
  z-index: -1;
  opacity: 0.4;
  text-transform: uppercase;
}

.bookbody {
  z-index: 99;
}

.smorebook {
  text-align: center;
  background-color: var(--grey-300);
  padding: 10rpx;
  border-radius: 9px;
  color: var(--grey-600);
}
